{
  "compilerOptions": {
    "lib": ["es2020"],
    "jsx": "react",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist" /* Redirect output structure to the directory. */
  },
  "compileOnSave": true,
  //  "include": ["src/index.ts"],
  "exclude": ["dist", "node_modules"]
}
